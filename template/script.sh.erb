#!/usr/bin/env bash

# Clean the environment
module purge

# Set working directory to home directory
cd "${HOME}"

#xfce
source "<%= session.staged_root.join("desktops", "#{context.desktop}.sh") %>" 
#
# Start program
#

module load comsol/<%= context.pom_comsol_versions %>

<%- if context.pom_num_gpus.to_i >= 1 -%>
module list
set -x
vglrun comsol
<%- else -%>
module list
set -x
comsol
<%- end -%>